<main class="container" id="register-form">
    <h1 class="center-align">Sign Up</h1>
    <fieldset class="card" title="Sign Up">
        {{> messages }}
        <form action="/register" method="POST">
            <div>
                <label for="username">Username</label>
                <input type="text" name="username" id="username" autofocus required />
            </div>
            <div>
                <label for="email">Email</label>
                <input type="email" name="email" id="email" autofocus required />
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" name="password" id="password" autofocus required />
            </div>
            <div>
                <label for="confirm">Confirm Password</label>
                <input type="password" name="confirm" id="confirm" autofocus required />
            </div>
            <button type="submit" class="waves-effect waves-dark btn blue white-text">Submit</button>
            <a href="/login" class="right">Already have an account? Login</a>
        </form>
    </fieldset>
</main>