<main class="container" id="register-form">
    <h1 class="center-align">Sign Up</h1>
    <fieldset class="card" title="Sign Up">
        {{> messages }}
        <form class="row" action="/register" method="POST">
            <div class="input-field col s6">
                <label for="firstName">FirstName</label>
                <input type="text" name="firstName" id="firstName" autofocus required />
            </div>
            <div class="input-field col s6">
                <label for="lastName">lastName</label>
                <input type="text" name="lastName" id="lastName" required />
            </div>
            <div class="input-field col s12">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" required />
            </div>
            <div class="input-field col s12">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" required />
            </div>
            <div class="input-field col s12">
                <label for="confirm">Confirm Password</label>
                <input type="password" name="confirm" id="confirm" required />
            </div>
            <button type="submit" class="col s12 waves-effect waves-dark btn blue white-text">Submit</button>
            <a href="/login" class="right">Already have an account? Login</a>
        </form>
    </fieldset>
</main>