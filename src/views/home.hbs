<main>
    {{> navbar}}
    <section id="cover">
    </section>
    <section id="store" class="container row">
        <div id="search" class="col s5">
        </div>
        <form class="input-field col s6">
            <label for="search">Search</label>
            <input type="text" name="search" id="search">
        </form>

        <h1 class="center-align">Store</h1>
        <ul class="col s12">
            {{#each pizza}}
            <li data-id={{this._id}} data-item={{...cart}} class="col s4">
                <div class="card">
                    <div class="card-image">
                        <img src={{this.image}} alt={{this.name}} />
                        <span id="price" class="card-title right-align">â‚µ{{this.price}}</span>
                        <span id="name" class="card-title left-align">{{this.name}}</span>
                    </div>
                    <div class="card-content">
                        <p>{{this.description}}</p>
                    </div>
                    <div class="card-action">
                        <button id="add-to-cart" class="waves-effect waves-light btn blue">
                            <i class="material-icons left">add_shopping_cart</i>
                            Add to cart
                        </button>
                    </div>
                </div>
            </li>
            {{/each}}
        </ul>
    </section>
    {{> footer }}
</main>